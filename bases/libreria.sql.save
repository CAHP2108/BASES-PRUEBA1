DROP DATABASE IF EXISTS libreria;
CREATE DATABASE libreria;

CREATE TABLE libros(
	ISBN VARCHAR(20) PRIMARY KEY;
	TITULO VARCHAR(20)
	GENERO VARCHAR(20) DEFAULT
	PRECIO INT CHECK < 50;
	FECHA_PUBLICACION DATE CHECK('20-3-2014')
);
